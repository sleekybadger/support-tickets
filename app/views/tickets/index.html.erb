<p style="color: green"><%= notice %></p>

<h1>Tickets</h1>

<%= render "shared/statistic", statistic: @statistic %>
<%= render "shared/search", search_path: tickets_path, query: @query, status: @status %>

<div id="tickets">
  <% @tickets.each do |ticket| %>
    <%= render "shared/ticket", ticket: ticket %>

    <p>
      <%= link_to "Show this ticket", ticket %>
    </p>
  <% end %>
</div>

<%= link_to "New ticket", new_ticket_path %>
